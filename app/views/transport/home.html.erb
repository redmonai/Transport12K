<!DOCTYPE html>
<html>
  <head>
    <title>Bootstrap 101 Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">

    <% @northBuses = Bus.getStopInfo("2061") %>
    <% @southBuses = Bus.getStopInfo("747") %>
    <% @northTrains = Dart.getStopInfo("brock", "Northbound") %>
    <% @southTrains = Dart.getStopInfo("perse", "Southbound") %>

  </head>

  <body>
    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="js/bootstrap.min.js"></script>

    <div class="table-responsive">
        <h3>Northbound</h3>
    	<table class="table table-striped">
            <colgroup span="3"></colgroup>
			<thead>
				<tr>
                    <th colspan="3" scope="colgroup">Dublin Bus - Knocksinna</th>
                    <th colspan="3" scope="colgroup">DART - Blackrock</th>
                </tr>
				<tr>
					<th>Route </th>
					<th>Destination	</th>
					<th>Due In </th>
                    <th>Train Type</th>
                    <th>Destination</th>
                    <th>Due In </th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<% @northBuses.zip(@northTrains).take(5).each do |b,t| %>
					<td> <%= b.route %> </td>
					<td> <%= b.destination %> </td>
					<td> <%= b.departureduetime %> </td>
                    <td> <%= t.traintype %> </td>
                    <td> <%= t.destination %> </td>
                    <td> <%= t.duetime %> </td>
				</tr>
				<% end %>
			</tbody>
     	</table>
    </div>

	<div class="table-responsive">
		<h3>Southbound</h3>
     	<table class="table table-striped">
            <colgroup span="3"></colgroup>
			<thead>
				<tr>
                    <th colspan="3" scope="colgroup">Dublin Bus - Dawson St.</th>
                    <th colspan="3" scope="colgroup">DART - Pearse St.</th>
                </tr>
				<tr>
					<th>Route </th>
					<th>Destination	</th>
					<th>Due In </th>
                    <th>Train Type</th>
                    <th>Destination</th>
                    <th>Due In </th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<% @southBuses.zip(@southTrains).take(5).each do |b,t| %>
					<td> <%= b.route %> </td>
					<td> <%= b.destination %> </td>
					<td> <%= b.departureduetime %> </td>
                    <td> <%= t.traintype %> </td>
                    <td> <%= t.destination %> </td>
                    <td> <%= t.duetime %> </td>
				</tr>
				<% end %>
			</tbody>
     	</table>
    </div>

    <div>
        <p class="text-right"> <%= (DateTime.now).strftime("Updated on %d/%m/%Y at %H:%M%p") %></p>
    </div>
  </body>

</html>

